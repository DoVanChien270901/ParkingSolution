<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DirectPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:background="@drawable/border_dpayment"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_fill_gray"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="7dp"
                    android:paddingLeft="10dp"
                    android:src="@drawable/ic_wallet"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingVertical="7dp"
                    android:text="Wallet balance: "></TextView>

                <TextView
                    android:id="@+id/a_dpayment_tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingVertical="7dp"
                    android:text="0VND"
                    android:textColor="@color/black"
                    ></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/a_dpayment_tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="valid amount between 10,000đ to 5,000,000đ"
                android:layout_marginLeft="25dp"
                android:textColor="#FF1414"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/border_dpayment"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="start"
                    android:text="Input payment"
                    android:textSize="40px"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/a_dpayment_et_amount"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="0đ"
                    android:textSize="60px"
                    android:inputType="number"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/a_dpayment_tv_20k"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_ms"
                    android:gravity="center"
                    android:text="20,000đ"
                    android:textSize="50px"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/a_dpayment_tv_50k"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_ms"
                    android:gravity="center"
                    android:text="50,000đ"
                    android:textSize="50px"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/a_dpayment_tv_100k"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_ms"
                    android:gravity="center"
                    android:text="100,000đ"
                    android:textSize="50px"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="570px"
                android:layout_height="570px"
                android:background="@drawable/boder_qrcode"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.83"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.864">

                <ImageView
                    android:id="@+id/a_dpayment_imv_qrcode"
                    android:layout_width="550px"
                    android:layout_height="550px"
                    android:layout_gravity="center"></ImageView>
            </FrameLayout>
        </LinearLayout>
        <Button
            android:id="@+id/a_dpayment_btn_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Code"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo"
            android:textSize="20dp"
            android:backgroundTint="@color/blue_default"
            android:background="@drawable/border_md"
            ></Button>
    </LinearLayout>
</LinearLayout>
