<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content">

        <TextView
            android:id = "@+id/a_bookinglist_tv_no"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "0.5"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "no"
            android:singleLine = "true" />

        <TextView
            android:id = "@+id/a_bookinglist_tv_parkingname"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "name"
            android:singleLine = "true" />

        <TextView
            android:id = "@+id/a_bookinglist_tv_amount"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "amount"
            android:singleLine = "true" />

        <TextView
            android:id = "@+id/a_bookinglist_tv_datetime"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "datetime"
            android:singleLine = "true" />

        <TextView
            android:id = "@+id/a_bookinglist_tv_timenum"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "timenum"
            android:singleLine = "true" />
    </LinearLayout>
</LinearLayout>